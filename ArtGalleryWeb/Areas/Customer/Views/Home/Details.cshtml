@model Product

<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-primary text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 mb-3">
                        <div class="row">
                            <div class="col-12 offset-lg-1">
                                <a asp-action="Index" class="btn btn-outline-dark mb-4 fw-semibold text-uppercase">
                                    <small>Back to list</small>
                                </a>
                            </div>
                            <div class="col-12 offset-lg-1">
                                <img src="@Model.ImageUrl" width="100%" class="rounded" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge bg-info">@Model.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark">Number of pieces created: @Model.StockQuantity</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark">Created date: @Model.CreatedDate.ToShortDateString()</h6>
                        </div>
                        <div class="row ps-2">
                            <h5 class="text-dark pb-2">
                                Price:
                                <span class="text-info ">
                                    @Model.Price.ToString("c")
                                </span>
                            </h5>
                        </div>
                        <div class="row pl-2 my-3 ps-2">
                            <p class=" lh-sm">@Html.Raw(Model.Description)</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart (Comming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</form>