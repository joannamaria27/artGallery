@model List<Company>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-folder-plus"></i> Create New Company
            </a>
        </div>
    </div>


    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Phone Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.PhoneNumber
                    </td>
                    <td>
                        @obj.StreetAddress
                    </td>
                    <td>
                        @obj.City
                    </td>
                    <td>
                        @obj.Region
                    </td>
                    <td>
                        @obj.PostalCode
                    </td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-info mx-2"><i class="bi bi-folder2-open"></i> Edit</a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-journal-minus"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

