@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Description" class="p-0"></label>
            <textarea asp-for="Description" disabled class="form-control"></textarea>
        </div>
        <div class="mb-3 row">
            <label asp-for="CreatedDate" class="p-0"></label>
            <input asp-for="CreatedDate" disabled class="form-control"/>
        </div>
        <div class="mb-3 row">
            <label asp-for="StockQuantity" class="p-0"></label>
            <input asp-for="StockQuantity" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
        </div>
    </div>
</form>
