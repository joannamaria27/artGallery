@model List<Product>


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-folder-plus"></i> Create New Product
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Author
                </th>
                <th>
                    Description
                </th>
                <th>
                    Created Date
                </th>
                <th>
                    Number of pieces
                </th>
                <th>
                    Price
                </th>
                <th>
                    Category
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Title
                    </td>
                    <td>
                        @obj.Author
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>
                        @obj.CreatedDate.ToShortDateString()
                    </td>
                    <td>
                        @obj.StockQuantity
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                       @obj.Category.Name
                    </td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-info mx-2"><i class="bi bi-folder2-open"></i> Edit</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-journal-minus"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>